{
  "name": "whatsapp-sticker-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot that converts images into stickers",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run src/index.ts",
    "start:prod": "bun run dist/index.js",
    "dev": "npx tsx --watch src/index.ts",
    "dev:node": "npx tsx --watch src/index.ts",
    "clean": "rimraf dist"
  },
  "keywords": ["whatsapp", "bot", "sticker", "baileys", "typescript"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "sharp": "^0.32.6",
    "qrcode-terminal": "^0.12.0",
    "@hapi/boom": "^10.0.1",
    "pino": "^8.19.0"
  }
}
